{
  "name": "playwright-pilot",
  "version": "1.0.0",
  "description": "Playwright-based UI test automation framework",
  "scripts": {
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:cli": "node --max-old-space-size=4096 ./node_modules/jest/bin/jest.js",
    "test:cli:watch": "jest --watch",
    "sync:ado": "tsx --env-file=.env src/integrations/azureDevops/index.ts",
    "pilot": "tsx src/cli/index.ts",
    "build:cli": "npx esbuild src/cli/index.ts --bundle --platform=node --outfile=dist/src/cli/index.js --packages=external --format=cjs && node -e \"require('fs').copyFileSync('src/cli/theme/plane.txt','dist/src/cli/plane.txt')\""
  },
  "bin": {
    "pilot": "./dist/src/cli/index.js"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.0.0",
    "@jest/globals": "^30.2.0",
    "@playwright/test": "^1.48.0",
    "@types/cli-progress": "^3.11.6",
    "@types/figlet": "^1.7.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.11.0",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.6",
    "tsx": "^4.7.0",
    "typescript": "^5.6.0"
  },
  "dependencies": {
    "@inquirer/prompts": "^8.1.0",
    "boxen": "^8.0.1",
    "chalk": "^5.6.2",
    "cli-progress": "^3.12.0",
    "commander": "^14.0.2",
    "dotenv": "^16.4.0",
    "fast-glob": "^3.3.3",
    "figlet": "^1.9.4",
    "mailosaur": "^8.7.0",
    "mimicry-js": "^1.3.0",
    "word-wrap": "^1.2.5"
  },
  "overrides": {
    "glob": "^10.0.0"
  }
}
